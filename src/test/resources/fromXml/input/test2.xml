<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Configuration name="PropertiesConfig" status="error">
<Loggers>
<Logger additivity="false" level="debug" name="com.example.my.app">
<AppenderRef ref="RollingFile"/>
</Logger>
<Root level="info">
<AppenderRef ref="STDOUT"/>
</Root>
</Loggers>
<Properties>
<Property name=".filename">target/rolling/rollingtest.log</Property>
</Properties>
<ThresholdFilter level="debug"/>
<Appenders>
<List name="List">
<Filters>
<Filter level="error" type="ThresholdFilter"/>
</Filters>
</List>
<RollingFile fileName="${filename}" name="RollingFile">
<PatternLayout pattern=""/>
</RollingFile>
<Console name="STDOUT">
<PatternLayout pattern=""/>
</Console>
</Appenders>
</Configuration>